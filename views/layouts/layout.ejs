<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    
    <!-- Base URL configuration for consistent asset paths -->
    <% 
    // Use baseUrl passed from server.js or default to empty string
    const baseUrl = typeof locals.baseUrl !== 'undefined' ? locals.baseUrl : ''; 
    const cacheBuster = Date.now(); 
    %>
    <link rel="stylesheet" href="<%= baseUrl %>/css/reset-styles.css?v=<%= cacheBuster %>" type="text/css">
    <link rel="stylesheet" href="<%= baseUrl %>/css/color-system.css?v=<%= cacheBuster %>" type="text/css">
    <link rel="stylesheet" href="<%= baseUrl %>/css/main.css?v=<%= cacheBuster %>" type="text/css">
    <link rel="stylesheet" href="<%= baseUrl %>/css/design-system.css?v=<%= cacheBuster %>" type="text/css">
    <link rel="stylesheet" href="<%= baseUrl %>/css/groups-custom.css?v=<%= cacheBuster %>" type="text/css">
    
    <!-- Inline critical CSS for immediate styling -->
    <style>
      /* Critical CSS for immediate styling */
      body {
        font-family: 'Open Sans', 'Helvetica Neue', Arial, sans-serif;
        line-height: 1.6;
        color: #333;
        background-color: #f8f9fa;
        margin: 0;
        padding-top: 80px;
      }
      h1, h2, h3, h4, h5, h6 {
        font-weight: 600;
        margin-bottom: 1rem;
        color: #2c3e50;
      }
      a {
        color: #3498db;
        text-decoration: none;
      }
      .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 15px;
      }
      .btn {
        display: inline-block;
        font-weight: 400;
        text-align: center;
        white-space: nowrap;
        vertical-align: middle;
        user-select: none;
        border: 1px solid transparent;
        padding: .375rem .75rem;
        font-size: 1rem;
        line-height: 1.5;
        border-radius: .25rem;
        transition: color .15s ease-in-out,background-color .15s ease-in-out,border-color .15s ease-in-out,box-shadow .15s ease-in-out;
      }
      .btn-primary {
        color: #fff;
        background-color: #007bff;
        border-color: #007bff;
      }
    </style>
    
    <!-- CSS is loaded directly and with the external css-fix.js script -->
    
    <!-- Custom Styles -->
    <style>
        /* Global styles to ensure consistency */
        body {
            padding-top: 80px; /* Add space for fixed header */
        }
    </style>
    
    <!-- Page-specific styles -->
    <%- typeof style !== 'undefined' ? style : '' %>
</head>
<body>
    <!-- Header -->
    <%- include('../partials/header') %>

    <!-- Main Content -->
    <%- body %>

    <!-- Footer -->
    <%- include('../partials/footer') %>

    <!-- Common Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" defer></script>
    
    <!-- CSS Fix Script for Production -->
    <script src="<%= baseUrl %>/js/css-fix.js"></script>
    
    <!-- Page-specific scripts -->
    <%- typeof script !== 'undefined' ? script : '' %>
</body>
</html>
